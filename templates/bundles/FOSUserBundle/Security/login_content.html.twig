{% trans_default_domain 'FOSUserBundle' %}



<main class="container-fluid compte">

    <!----page connexion--->
    <div class="container">
        <hr>
        <h2>Mon compte</h2>
    </div>

    <div class="container btn-danger">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>

    <article class="container">

        <p>Je suis déjà client(e)</p>


     <form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}



            <div class="form-group d-flex flex-column">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>

            <div class="form-group d-flex flex-column">
                 <label for="password">{{ 'security.login.password'|trans }}</label>
                 <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

            </div>

            <div class="form-group d-flex flex-column">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="button3"/>
    </form>
        <a href="/resetting/request" style="font-size:12px">Mot de passe perdu ?</a>



    </article>



    <article class="container">

        <div class="inscription">
            <p>Je ne suis pas encore client(e)</p>
            <a href="{{ path('fos_user_registration_register') }}" class="button3">INSCRIPTION</a>
        </div>

    </article>



</main>
