{% extends '/admin/index.html.twig'%}

{% block title %}Édition{% endblock %}


{% block main %}
    <main class="container-fluid admin">
        <section>
            <div class="container">
                <hr>
                <h2>Édition</h2>

            </div>
            <article class="container">

                {{ form_start(createForm) }}
                {{ form_row(createForm.titre) }}
                {{ form_row(createForm.contenu) }}
                {{ form_row(createForm.picture,{'label':'Image'}) }}
                {{ form_row(createForm.page) }}
                <button type="submit" class="btn btn-success">Éditer</button>
                {{ form_end(createForm) }}

            </article>
        </section>
    </main>
{% endblock %}

