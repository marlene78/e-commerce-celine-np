{% extends '/admin/index.html.twig'%}

{% block title %}Edition Finitions{% endblock %}

{% block header %}

    <header>
        <div class="row justify-content-around">

            <div class="logo row  align-items-center">
                <a href="{{ path("home") }}"><img src="{{ asset('img/logo-3.png' ) }}" alt="logo"></a>
                <a href="{{ path("home") }}"><h1 class="text-nowrap">Céline NP</h1></a>
            </div>

        </div>
    </header>

    <nav class="row justify-content-center nav-scroller py-1 mb-2">
        <a href="{{ path("home") }}">Retour à l'accueil du site</a>
        <a href="{{ path("admin") }}">Administration</a>
        <a href="{{ path('finitions_index') }}">Liste des finitions</a>
    </nav>
    <div class="container">
       <hr>
    </div>

{% endblock %}

{% block main %}
 <main class="container-fluid admin">

    <section class="container">
    
        <h2>Édition</h2>

    

          <article class="container">

                {{ form_start(form) }}

                {{ form_row(form.nom) }}

            <div class="form-row">

                <div class="form-group col-md-6">
                    {{ form_row(form.picture) }}
                </div>
              

                <div class="form-group col-md-6">

                    <img class="card-img-top" src="{{ vich_uploader_asset(finition.picture, 'imageFile','App\\Entity\\Image') }}" alt="{{ finition.picture.alt }}" >
                </div>

            </div>

            {{ form_row(form.prix) }}

            <button type="submit" class="btn btn-grey">Éditer</button>
            {{ form_end(form) }}

        </article>
        

   
    </section>
</main>
{% endblock %}
