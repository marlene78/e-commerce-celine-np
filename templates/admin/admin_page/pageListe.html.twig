{% extends '/admin/index.html.twig'%}

{% block title %}Gestion des pages{% endblock %}



{% block main %}

<main class="container-fluid admin">

    <div class="container">
   
        <h2>Liste des pages</h2>

        <table class="table table-responsive-sm table-responsive-md table-responsive-lg table-responsive-xl">

            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th>Édition</th>
                </tr>
            </thead>

            <tbody>
            {% for page in pages %}
                <tr>
                    <th scope="row">{{ page.titre }}</th>
                    <td scope="row"><a href="{{ path('app_adminpage_pageshow',{ id:page.id}) }}" class="btn btn-grey">Éditer</a></td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

        <p>Pour créer de nouvelles pages merci de contacter le développeur</p>

        <a href="{{ path('addarticle') }}" class="btn btn-beige">Ajouter un article</a>
                

    </div>

   


</main>

{% endblock %}




