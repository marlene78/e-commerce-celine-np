{% extends 'base.html.twig' %}

{% block title %}{{ page.titre }}{% endblock %}

{% block main %}
<main class="container-fluid">

<!--page 2 :Concept---->
   <section class="concept">

       <div class="container">
            <hr>
            <h2>{{ page.titre }}</h2>
       </div>

       {% for article in page.articles %}
            <article class="container d-flex flex-wrap">
                <div class="card col-12 col-md-4 col-lg-3 col-xl-3">
                    <img class="card-img-top" src="{{ vich_uploader_asset(article.picture, 'imageFile','App\\Entity\\Image') }}" alt="{{ article.picture.alt }}">
                </div>
                <div class="col-12  col-md-8 col-lg-9 col-xl-9  content">
                    <h3>{{ article.titre }}</h3>
                    <p>{{ article.contenu | raw('html') }}</p>
                </div>
            </article>
       {% endfor %}

   </section>

</main>



{% endblock %}
