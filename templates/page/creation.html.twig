{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block main %}

<main class="container-fluid creation">

    <div class="container">
        <hr>
        <h2>Mes cr√©ations</h2>

    </div>

<section class="bloc_creation" data-0="transform:translateX(0%)" data-80="transform:translateX(-400%)">

    {% for article in page.articles%}

      <div class="card col-12 col-sm-12 col-md-8 col-lg-6 col-xl-8">

        <div class="row">

          <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 img">
            <img src="{{ vich_uploader_asset(article.picture, 'imageFile','App\\Entity\\Image') }}" alt="{{ article.picture.alt }}" class="card-img">
          </div>

          <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class="card-body">   
              <h5 class="card-title">{{ article.titre}}</h5>
              <p class="card-text">{{ article.contenu | raw('html')}}</p>
            </div>
          </div>

        </div>

      </div>
     


    {% endfor %}

</section>
 












</main>


{% endblock %}