{% for article in page.articles%}
<div class="card mb-3">

  <div class="row no-gutters">

        <div class="col-md-8">
            <img src="{{ vich_uploader_asset(article.picture, 'imageFile','App\\Entity\\Image') }}" alt="{{ article.picture.alt }}" class="card-img">
        </div>

        <div class="col-md-4 info-right">
          <div class="card-body">   
            <h5 class="card-title">{{ article.titre}}</h5>
            <p class="card-text">{{ article.contenu | raw('html')}}</p>
          </div>
        </div>

  </div>

</div>
{% endfor %}



 
   
    






</main>


{% endblock %}