{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block main %}

<main class="container-fluid creation">

    <div class="container">
        <hr>
        <h2>Mes cr√©ations</h2>

    </div>

  <section class="row">

      {% for article in page.articles%}

          <div class="card col-12 col-sm-6 col-md-6 col-l-6 col-xl-4">

              <div class="img info-left">
                <img src="{{ vich_uploader_asset(article.picture, 'imageFile','App\\Entity\\Image') }}" alt="{{ article.picture.alt }}" class="card-img">
              </div>

              <div class="contenu info-right">
                <div class="card-body">   
                  <h5 class="card-title">{{ article.titre}}</h5>
                  <p class="card-text">{{ article.contenu | raw('html')}}</p>
                </div>
              </div>



          </div>

     
       


      {% endfor %}

  </section>
   












</main>


{% endblock %}